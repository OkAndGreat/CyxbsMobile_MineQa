<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mredrock.cyxbs.mine.page.stamp.StampCenterViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mine_stamp_center_cl"
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <TextView
                android:id="@+id/mine_stamp_center_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="53dp"
                android:text="@string/mine_stamp_center_title"
                android:textColor="@color/mine_stamp_title"
                android:textSize="22dp"
                app:layout_constraintStart_toEndOf="@+id/mine_stamp_center_back_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mine_stamp_center_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mine_ic_back_arrow_deep" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/mine_stamp_center_abl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                    <FrameLayout
                        android:id="@+id/mine_stamp_center_fl"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        app:cardCornerRadius="12dp"
                        app:layout_scrollFlags="scroll|enterAlways"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/common_blue_button"
                            />
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="36dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="@string/mine_stamp_exchange_detail_order_code"
                                android:textAppearance="@style/mine_stamp_exchange_detail_code_num" />

                            <TextView
                                android:id="@+id/mine_tv_exchange_code_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="245769"
                                android:textAppearance="@style/mine_stamp_exchange_real_code_num" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:text="@string/mine_stamp_exchange_ps"
                                android:textAppearance="@style/mine_stamp_exchange_ps" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </FrameLayout>
                <com.google.android.material.tabs.TabLayout
                    android:background="@color/mine_stamp_background"
                    android:id="@+id/mine_stamp_center_tl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:tabTextColor="@color/common_alpha_level_two_font_color"
                    app:tabSelectedTextColor="@color/common_level_two_font_color"
                    app:tabGravity="fill"
                    app:tabIndicatorHeight="3dp"
                    app:tabIndicatorColor="@color/common_mine_tab_layout_indicator_color"
                    app:tabIndicatorFullWidth="false"
                    app:tabMode="fixed"
                    android:layout_below="@id/mine_stamp_center_fl" />
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                >
                <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/mine_stamp_center_tl_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            </androidx.cardview.widget.CardView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>



    </LinearLayout>
</layout>